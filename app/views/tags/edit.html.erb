<div>
  <h2>Update tag</h2>
  <%= form_with model: [@content, @tag], local: true do |f| %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="text-center">
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Booty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <% if flash[:notice] %>
      <div class="text-success"><%= flash[:notice] %></div>
    <% elsif flash[:alert] %>
      <div class="text-danger"><%= flash[:alert] %></div>
    <% end %>
    <%= yield %>
    </div>
  </body>
</html>

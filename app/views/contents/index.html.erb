<h2>Contents</h2>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th>Title</th>
          <th>Image</th>
          <th>Tag</th>
          <th>Menu</th>
        </tr>
      </thead>
      <tbody>
        <% @contents.each do |content| %>
        <tr>
          <td><%= content.title %></td>
          <td><%= link_to image_tag(content.image.to_s, width: '200'), content_path(content) %></td>
          <td>
            <% if content.tags.any? %>
              <% content.tags.each do |tag| %>
                <%= link_to '#' + tag.name, edit_content_tag_path(content, tag) %> 
              <% end %>
            <% else %>
              No tag yet.
            <% end %>
          </td>
          <td>
            [<%= link_to 'Edit', edit_content_path(content) %>]
            [<%= link_to 'Delete', content_path(content), method: :delete, data:{ confirm: 'Are you sure?' } %>]
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to 'New Content', new_content_path %>
    </div>
  </div>
</div>

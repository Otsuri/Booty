<h2>Contents</h2>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th>Title</th>
          <th>Image</th>
          <th>Detail</th>
          <th>Menu</th>
        </tr>
      </thead>
      <tbody>
        <% @contents.each do |content| %>
        <tr>
          <td><%= content.title %></td>
          <td><%= image_tag content.image.to_s, :width => '200' %></td>
          <td><%= content.detail %></td>
          <td><%= link_to 'Edit', edit_content_path(content) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= link_to 'New Content', new_content_path %>
    </div>
  </div>
</div>
